<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_analysis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="分析"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:onClick="closeMenu"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_menu_pack_up"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_draw_analysis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:onClick="drawAnalysis"
        android:orientation="vertical"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_analysis"
        app:layout_constraintWidth_percent="0.5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_draw" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center"
            android:text="绘制"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_reset_analysis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@color/white"
        android:onClick="resetAnalysis"
        android:orientation="vertical"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_analysis"
        app:layout_constraintWidth_percent="0.5">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_reset" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center"
            android:text="重置"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_planning_analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="planningAnalysis"
        android:padding="6dp"
        android:text="规划分析"
        android:textColor="@color/textTitle"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/ll_draw_analysis" />

    <TextView
        android:id="@+id/tv_situation_analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="situationAnalysis"
        android:padding="6dp"
        android:text="现状分析"
        android:textColor="@color/textTitle"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_planning_analysis" />

    <TextView
        android:id="@+id/tv_farmland_analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="farmlandAnalysis"
        android:padding="6dp"
        android:text="农田分析"
        android:textColor="@color/textTitle"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_situation_analysis" />


</android.support.constraint.ConstraintLayout>