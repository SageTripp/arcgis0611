<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_user"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="2dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="用户"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:onClick="closeMenu"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/icon_menu_pack_up"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_my_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="myMessage"
        android:padding="6dp"
        android:text="我的消息"
        android:textColor="@color/textTitle"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_user" />

    <TextView
        android:id="@+id/tv_my_office"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="myOffice"
        android:padding="6dp"
        android:text="我的办公"
        android:textColor="@color/textTitle"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_message" />

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="feedback"
        android:padding="6dp"
        android:text="意见反馈"
        android:textColor="@color/textTitle"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_my_office" />

    <TextView
        android:id="@+id/tv_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="aboutUs"
        android:padding="6dp"
        android:text="关于我们"
        android:textColor="@color/textTitle"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_feedback" />


    <TextView
        android:id="@+id/tv_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="exit"
        android:padding="6dp"
        android:text="退出"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_about_us" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/textTitle"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_copyright"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="V 1.2.1" />

    <TextView
        android:id="@+id/tv_copyright"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="© 驻马店国土资源局"
        android:textColor="@color/textTitle"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>